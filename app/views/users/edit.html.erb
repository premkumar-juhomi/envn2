<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :age %>
      <%= f.age_field :age, class: 'form-control' %>

      <%= f.label :gender %>
      <%= f.gender_field :gender, class: 'form-control' %>

      <%= f.label :designation, "Confirmation" %>
      <%= f.designation_field :designation, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    </div>
</div>
